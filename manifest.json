{
  "manifest_version": 3,
  "name": "Duolingo Memo",
  "version": "0.0.1",
  "description": "Remember and auto-fills your answers on Duolingo",
  "icons": {
    "16": "src/static/logo/16x16.png",
    "48": "src/static/logo/48x48.png",
    "128": "src/static/logo/128x128.png",
    "256": "src/static/logo/256x256.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Duolingo Memo",
    "default_icon": {
      "16": "src/static/logo/16x16.png",
      "24": "src/static/logo/24x24.png",
      "32": "src/static/logo/32x32.png"
    }
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "matches": ["https://www.duolingo.com/*"],
      "js": ["src/content/duolingo/index.ts"]
    }
  ]
}
